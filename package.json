{
  "name": "avto-vykup",
  "version": "1.0.0",
  "private": true,
  "description": "Выкуп авто - Сайт для выкупа автомобилей в Москве и МО. Vite + React SSR, TypeScript, оптимизирован для ТОП-1",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\" --names \"SERVER,VITE\" --prefix-colors \"blue,green\"",
    "dev:client": "vite",
    "dev:server": "npm run build:server && nodemon dist/server/index.js",
    "dev:server:watch": "tsc --project tsconfig.server.json --watch",
    "dev:full": "npm run free:ports && concurrently \"npm run dev:server:watch\" \"npm run dev:server\" \"npm run dev:client\" --names \"TS,SRV,CLI\" --prefix-colors \"blue,green,yellow\"",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "tsc --project tsconfig.server.json",
    "preview": "vite preview",
    "start": "node dist/server/index.js",
    "free:ports": "node scripts/free-ports.js",
    "lint": "eslint src server --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "check:performance": "node scripts/check-performance.js",
    "check:seo": "node scripts/check-seo.js",
    "check:all": "npm run check:seo && npm run check:performance",
    "generate-sri": "node scripts/generate-sri.js",
    "analyze": "vite build --mode analyze",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:full": "node scripts/run-tests-with-report.js",
    "test:e2e:analyze": "node scripts/analyze-test-results.js",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:e2e:desktop": "playwright test --project=chromium --project=firefox --project=webkit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\" \"server/**/*.{ts,js}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\" \"server/**/*.{ts,js}\"",
    "prepare": "husky"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-hook-form": "^7.51.0",
    "react-router-dom": "^7.0.0",
    "tailwindcss": "^3.4.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/ui": "^1.2.0",
    "@vitest/coverage-v8": "^1.2.0",
    "ajv": "^8.17.1",
    "autoprefixer": "^10.4.17",
    "chrome-launcher": "^1.2.1",
    "concurrently": "^9.2.1",
    "cssnano": "^7.1.2",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "lighthouse": "^13.0.1",
    "nodemon": "^3.1.11",
    "jsdom": "^23.0.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0",
    "supertest": "^6.3.3",
    "@types/supertest": "^6.0.2",
    "postcss": "^8.4.33",
    "prettier": "^3.2.5",
    "rollup-plugin-visualizer": "^5.12.0",
    "typescript": "^5.3.3",
    "vite": "^7.2.2",
    "vitest": "^4.0.10",
    "@playwright/test": "^1.40.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,css,md}": [
      "prettier --write"
    ]
  }
}
